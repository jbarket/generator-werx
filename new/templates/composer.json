{
  "name": "werx/skeleton",
  "description": "Skeleton Application for the Werx Project",
  "homepage": "https://github.com/werx/skeleton",
  "license": "MIT",
  "authors": [
    {
      "name": "Josh Moody",
      "email": "josh@moody.io"
    }
  ],
  "autoload": {
    "psr-4": {
      "<%= root_namespace.replace(/\\/g, "\\\\") %>\\Tests\\": "tests/",
      "<%= root_namespace.replace(/\\/g, "\\\\") %>\\Controllers\\": "src/controllers/",
      "<%= root_namespace.replace(/\\/g, "\\\\") %>\\Entities\\": "src/entities/",
      "<%= root_namespace.replace(/\\/g, "\\\\") %>\\Managers\\": "src/managers/",
      "<%= root_namespace.replace(/\\/g, "\\\\") %>\\Models\\": "src/models/",
      "<%= root_namespace.replace(/\\/g, "\\\\") %>\\Utils\\": "src/utils/",
      "<%= root_namespace.replace(/\\/g, "\\\\") %>\\Validators\\": "src/validators/"
    }
  },
  "require": {
    "php": ">= 5.4",
    "werx/core": "~1.5",
    "werx/validation": "~1.0",
    "werx/forms": "~1.0",
    "werx/messages": "~1.0",
    "filp/whoops": "~1.2@dev"
  },

  "require-dev": {
    "phpunit/phpunit": "~4.2",
    "squizlabs/php_codesniffer": "~2.2"
  },
  "minimum-stability": "dev"
}